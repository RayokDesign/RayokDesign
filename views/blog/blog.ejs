<% include ./template/blogHeader %>
<div class="container">
  <div class="row my-4 justify-content-center">
    <% for(var prop in articles){ %>
    <div class="col-md-9">
        <div class="card mb-3">
          <div class="card-body">
            <a href="/blog/post/<%- articles[prop].id %>"> <h2 class="text-primary"><%- articles[prop].title %></h2></a>
            <div class="d-flex flex-row text-secondary small">
              <div class="p-2"><span class="fa fa-clock-o"></span><img src="/icons/clock.svg" class="rounded me-2" alt="clock_icon"><%- moment(articles[prop].update_time * 1000).format('YYYY/MM/DD') %>,</div>
              <div class="p-2"><i class="fa fa-tag" aria-hidden="true"></i> 
                <a href="#" class="text-info"><img src="/icons/tags.svg" class="rounded me-2" alt="tags"><%- categories[articles[prop].category].name %></a>
              </div>
            </div>
            <div>
              <%- striptags(articles[prop].content).slice(0,150) %>...
            </div>
          </div>
        </div>
    </div>
    <% } %>
  </div>
</div>
<% include ../partials/pagination %>
<% include ./template/blogFooter %>