<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Finances</title>
    <link rel="icon" type="shortcut icon" href="/images/icons/favicon.ico">
    <link rel="stylesheet" href="https://rayok.tw/stylesheets/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.0/font/bootstrap-icons.css">
</head>
<body>
    <div class="container">
        <header>
            <nav class="navbar navbar-light pt-3 mb-4">
                <div class="container-fluid">
                    <a href="/restaurant" class="navbar-brand">
                        <img class="me-2" src="/images/icons/favicon-32x32.png" alt="" width="32" height="32" class="d-inline-block align-text-top">
                        YRCOM
                    </a>
                    <div>
                        <input id="month-selector" type="month" class="form-control">
                    </div>
                    <div class="user-container">
                        <button type="button" id="sign-in" class="btn btn-primary"><i class="bi bi-google me-2"></i>Sign-in</button>
                        <button type="button" id="sign-out" class="btn btn-primary d-none"><i class="bi bi-door-closed me-2"></i>Sign-out</button>
                    </div>
                </div>
            </nav>
        </header>
        <!-- SHOW RECORDS -->
        <section id="records" class="mb-3">
            
        </section>
    <!-- /SHOW RECORDS -->
    </div>
    <div class="plug-in">
        <!-- toast -->
        <div class="position-absolute bottom-0 start-50 translate-middle-x p-3" style="z-index: 11">
            <div id="must-signin-toast" class="toast text-white bg-black" role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="2000">
                <div class="toast-body">
                </div>
            </div>
        </div>
        <!-- /toast -->
    </div>
    <div class="fixed-bottom mb-2">
        <form id="record-form" action="#" class="container">
            <div class="row mb-2 justify-content-center">
                <div class="col-10">
                    <div class="input-group">
                        <input id="amount-input" class="form-control" name="amount" type="number" required="required" placeholder="0">
                        <span class="input-group-text">à¸¿</span>
                    </div>
                </div>
            </div>
            <div class="row mb-2 justify-content-center">
                <div class="col-5">
                    <div class="form-check">
                        <input id="expense-radio" class="form-check-input" type="radio" name="expin" value="expense" checked>
                        <label class="form-check-label" for="expense">
                            Expense
                        </label>
                    </div>
                </div>
                <div class="col-5">
                    <div class="form-check">
                        <input id="income-radio" class="form-check-input" type="radio" name="expin" value="income">
                        <label class="form-check-label" for="income">
                            Income
                        </label>
                    </div>
                </div>
            </div>
            <div class="row mb-2 justify-content-center">
                <div class="col-5">
                    <select id="category-select" class="form-select col-5" name="category" required>
                        <option selected value="">Select a category</option>
                    </select>
                </div>
                <div class="col-5">
                    <select id="item-select" class="form-select col-5" name="item" required>
                        <option selected value="">Select an item</option>
                    </select>
                </div>
            </div>
            <div class="row mb-2 justify-content-center">
                <div class="col-10">
                    <input id="date-selector" type="date" class="form-control">
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-10 text-end">
                    <button id="submit" type="submit" class="btn btn-primary">
                        Add
                    </button>
                </div>
            </div>
        </form>
    </div>
    
    <script src="dist/finances_bundle.js"></script>
    <script src="https://rayok.tw/javascripts/bootstrap.min.js"></script>
</body>
</html>