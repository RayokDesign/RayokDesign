<%- include('header') %>
<nav class="navbar navbar-light pt-3 mb-4">
    <div class="container">
        <h1><a href="/" class="navbar-brand">RayokTailand</a></h1>
    </div>
</nav>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
            <h2 class="mb-3 fs-4 fw-bold text-center">註冊</h2>
            <% if (error){ %>
                <div class="alert alert-danger" role="alert"><%= error %></div>
            <% } %>
            <form action="/signup" method="post">
                <div class="mb-3 fw-bold">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" class="form-control" id="username" name="username" placeholder="請輸入用戶名" autofocus required autocomplete="off" />
                </div>
                <div class="mb-3 fw-bold">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="請輸入信箱" required autocomplete="off"/>
                </div>
                <div class="mb-3 fw-bold">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="請輸入密碼" required autocomplete="off"/>
                </div>
                <div class="mb-3 mx-auto d-grid">
                    <input type="submit" class="btn btn-primary"value="註冊" />
                </div>
                <p class="text-end fs-6">已經註冊了嗎? <a href="/signin">登入</a></p>
            </form>
        </div>
    </div>
</div>
<%- include('footer') %>