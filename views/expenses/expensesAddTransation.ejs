<% include ./template/expensesHeader %>
<div class="container">
	<div class="row justify-content-center">
		<div class="col-6">
			<form class="form-floating">
				<input type="text" class="form-control mb-3 h-25 fs-3 border-top-0 border-end-0 border-start-0" id="floatingInputInvalid" value="0">
				<label for="floatingInputInvalid">Amount</label>
			</form>
			<select class="form-select mb-1 fs-4 border-top-0 border-end-0 border-start-0" id="inputGroupSelect01">
				<option selected>Select category</option>
				<option value="1">One</option>
				<option value="2">Two</option>
				<option value="3">Three</option>
			</select>
			<input type="text" class="form-control mb-1 border-top-0 border-end-0 border-start-0" placeholder="note">
			<input type="date" class="form-control border-top-0 border-end-0 border-start-0 mb-2" value="<%-moment(new Date()).format('YYYY-MM-DD')%>">
			<button type="button" class="btn btn-secondary">Cancel</button>
			<button type="button" class="btn btn-primary">Save</button>
			<button type="button" class="btn btn-outline-danger"><img fill="currentColor" src="/icons/plus-circle-fill.svg" class="bi bi-plus-circle-fill" alt="">Button</button>
			<i class="bi-alarm"></i>
		</div>
	</div>
</div>
<% include ./template/expensesFooter %>